{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node", 
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "allowJs": true,
        "target": "esnext",
        "outDir": "dist"
    },
    "include": [
        "./packages",
        "./src",
        "./types.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.js"
    ]
}