{
  "name": "@kalm/ipc",
  "version": "7.0.0",
  "description": "IPC transport for Kalm",
  "main": "bin/ipc.js",
  "scripts": {
    "build": "../../scripts/build.sh ipc",
    "clean": "../../scripts/cleanup.sh",
    "test": "jest ./tests",
    "prepublishOnly": "npm run build && cp ../../LICENSE ./LICENSE && cp ../../CHANGELOG.md ./CHANGELOG.md"
  },
  "engines": {
    "node": ">=14"
  },
  "funding": {
    "type": "Open Collective",
    "url": "https://opencollective.com/kalm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kalm/kalm-js.git"
  },
  "keywords": [
    "framework",
    "network",
    "realtime",
    "socket",
    "nagle",
    "ipc"
  ],
  "files": ["bin", "types.d.ts"],
  "author": "frederic charette <fredericcharette@gmail.com>",
  "license": "Apache-2.0",
  "typings": "./types.d.ts",
  "bugs": {
    "url": "https://github.com/kalm/kalm-js/issues"
  },
  "homepage": "https://kalm.js.org",
  "contributors": [
    "frederic charette <fredericcharette@gmail.com>"
  ],
  "browser": {
    "net": false,
    "fs": false
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
      "ts-jest", {
        "diagnostics": false,
        "isolatedModules": true
      }]
    }
  }
}
